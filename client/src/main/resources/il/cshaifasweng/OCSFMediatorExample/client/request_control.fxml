<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.RequestController">
   <children>
      <ChoiceBox fx:id="services" layoutX="270.0" layoutY="108.0" prefWidth="150.0" style="-fx-background-color: white; -fx-border-color: gray;" />
      <TextField fx:id="explainService" layoutX="270.0" layoutY="160.0" prefHeight="50.0" prefWidth="150.0" style="-fx-border-color: gray;" />
      <Button fx:id="previousPage" layoutX="300.0" layoutY="305.0" mnemonicParsing="false" onAction="#getPrevious" prefWidth="80.0" style="-fx-background-color: #7ad0ea;" text="Back" textFill="WHITE">
         <font>
            <Font name="David Bold" size="14.0" />
         </font></Button>
      <Button fx:id="submit" layoutX="280.0" layoutY="232.0" mnemonicParsing="false" onAction="#submitRequest" prefHeight="14.0" prefWidth="120.0" style="-fx-background-color: without;" />
      <Label fx:id="note" layoutX="155.0" layoutY="170.0" prefHeight="30.0" prefWidth="90.0" text="Note:">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="150.0" layoutY="105.0" prefHeight="30.0" prefWidth="89.0" text="Service Type:" textFill="#0e3540">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label alignment="BOTTOM_CENTER" layoutX="158.0" layoutY="23.0" prefHeight="50.0" prefWidth="284.0" text="Submit Service Request">
         <font>
            <Font name="David Bold" size="22.0" />
         </font>
      </Label>
      <ImageView fx:id="image" fitHeight="111.0" fitWidth="173.0" layoutX="97.0" layoutY="258.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
